    "description": "A simple, lightweight and high-performance PHP coroutine framework.",
    "keywords": [
        "php",
        "swoole",
        "coroutine",
        "simple",
        "simps"
    ],
    "license": "Apache-2.0",
    "require": {
        "php": ">=7.1",
        "ext-swoole": ">=4.4",
        "simple-swoole/simps": "~1.0.0",
        "simple-swoole/db": "~1.0.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "bin": [
        "bin/simps.php"
    ],
    "config": {
        "optimize-autoloader": true
    }
}
